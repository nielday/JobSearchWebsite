@model JobSearchWebsite.Models.CareerGuide

@{
    ViewData["Title"] = "Xóa cẩm nang";
}

<h2>Xóa cẩm nang</h2>

<h3>Bạn có chắc muốn xóa cẩm nang này?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ảnh đại diện
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 200px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>
        <dt class="col-sm-2">
            Tiêu đề
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            Tác giả
        </dt>
        <dd class="col-sm-10">
            @Model.Author.UserName
        </dd>
        <dt class="col-sm-2">
            Ngày đăng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>