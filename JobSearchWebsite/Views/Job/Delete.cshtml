@model JobSearchWebsite.Models.Job

@{
    ViewData["Title"] = "Xóa công việc";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <!-- Hiển thị thông báo lỗi -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h3>Bạn có chắc muốn xóa công việc này?</h3>
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Company - @Model.Location</h6>
            <p class="card-text">@Model.Description</p>
        </div>
    </div>
    <form asp-action="Delete" asp-controller="Job" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger mt-3">Xóa</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">Hủy</a>
    </form>
</div>