@model JobSearchWebsite.Models.ResumeTemplate
@{
    ViewData["Title"] = "Chi tiết CV mẫu";
}

<div class="container mt-5">
    <h2>Chi tiết CV mẫu</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text text-muted">Loại file: @(Model.FileType ?? "N/A")</p>
            <p class="card-text text-muted">Ngày tạo: @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
            <p class="card-text text-muted">Người tạo: @Model.CreatedByUser?.UserName</p>
            <div class="mt-3">@Html.Raw(Model.Content)</div>
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-success mt-3">Tải xuống file</a>
            }
        </div>
    </div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</div>