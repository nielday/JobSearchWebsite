@model JobSearchWebsite.Models.ResumeTemplate
@{
    ViewData["Title"] = "Xóa CV mẫu";
}

<div class="container mt-5">
    <h2>Xóa CV mẫu</h2>
    <h4>Bạn có chắc chắn muốn xóa CV mẫu này?</h4>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">Loại file: @(Model.FileType ?? "N/A")</p>
            <p class="card-text">Ngày tạo: @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
            <p class="card-text">Ngày cập nhật: @(Model.UpdatedDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
            <p class="card-text">Người tạo: @Model.CreatedByUser?.UserName</p>
            <div class="mt-3">@Html.Raw(Model.Content)</div>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger mt-3">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
    </form>
</div>