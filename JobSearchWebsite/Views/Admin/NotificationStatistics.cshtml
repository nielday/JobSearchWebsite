@model dynamic

@{
    ViewData["Title"] = "Thống kê thông báo";
}

<h2>Thống kê thông báo</h2>

<form asp-action="NotificationStatistics" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <input type="number" name="year" class="form-control" placeholder="Năm" value="@ViewBag.SelectedYear" min="2000" max="2100" />
        </div>
        <div class="col-md-3">
            <select name="month" class="form-control">
                <option value="">Tất cả tháng</option>
                @for (int i = 1; i <= 12; i++)
                {
                    if (ViewBag.SelectedMonth == i)
                    {
                        <option value="@i" selected>@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Lọc</button>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>Tổng số thông báo</h5>
                <p class="text-primary">@ViewBag.TotalNotifications</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>Thông báo chưa đọc</h5>
                <p class="text-danger">@ViewBag.UnreadNotifications</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>Thông báo chưa đọc của Admin</h5>
                <p class="text-warning">@ViewBag.UnreadAdminNotifications</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mt-3">
        <div class="card">
            <div class="card-body">
                <h5>Thông báo chưa đọc của Employer</h5>
                <p class="text-info">@ViewBag.UnreadEmployerNotifications</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mt-3">
        <div class="card">
            <div class="card-body">
                <h5>Thông báo chưa đọc của JobSeeker</h5>
                <p class="text-success">@ViewBag.UnreadJobSeekerNotifications</p>
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>