@model dynamic
@{
    ViewData["Title"] = "Quản lý vai trò";
}

<div class="container mt-4">
    <h1>Quản lý vai trò cho @ViewBag.UserName</h1>
    <form asp-action="ManageRoles" method="post">
        <input type="hidden" name="userId" value="@ViewBag.UserId" />
        <div class="mb-3">
            <h4>Vai trò hiện tại: @string.Join(", ", ViewBag.UserRoles)</h4>
        </div>
        <div class="mb-3">
            <h4>Chọn vai trò mới:</h4>
            @foreach (var role in ViewBag.AllRoles)
            {
                <div class="form-check">
                    <input type="checkbox" name="roles" value="@role.Name"
                           class="form-check-input"
                    @(ViewBag.UserRoles.Contains(role.Name) ? "checked" : "") />
                    <label class="form-check-label">@role.Name</label>
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật vai trò</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>