@page
@model EnterOtpModel
@{
    ViewData["Title"] = "Nhập mã OTP";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-shield-lock me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p class="text-center text-muted">Chúng tôi đã gửi một mã OTP đến email của bạn. Vui lòng nhập mã để xác nhận danh tính.</p>
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.OtpCode" class="form-control" aria-required="true" placeholder="123456" />
                            <label asp-for="Input.OtpCode" class="form-label">Mã OTP (6 chữ số)</label>
                            <span asp-validation-for="Input.OtpCode" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-primary btn-lg">Xác nhận</button>
                    </form>
                    <div class="mt-3 text-center">
                        <p>Không nhận được mã? <a asp-page="/Account/Login" class="text-primary">Thử lại</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .card-header {
            border-radius: 8px 8px 0 0;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
    </style>
}