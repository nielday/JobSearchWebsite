@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-box-arrow-left me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body text-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="text-muted mb-4">Nhấn vào nút dưới đây để đăng xuất khỏi hệ thống.</p>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger btn-lg">Đăng xuất ngay</button>
                        </form>
                    }
                    else
                    {
                        <p class="text-success">Bạn đã đăng xuất thành công khỏi hệ thống.</p>
                        <a asp-page="/Account/Login" class="btn btn-primary btn-lg mt-3">Quay lại đăng nhập</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card-header {
            border-radius: 8px 8px 0 0;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
}