@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Xác nhận quên mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-check-circle me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted">Vui lòng kiểm tra email của bạn để nhận liên kết đặt lại mật khẩu.</p>
                    <a asp-page="/Account/Login" class="btn btn-primary btn-lg mt-3">Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card-header {
            border-radius: 8px 8px 0 0;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
}